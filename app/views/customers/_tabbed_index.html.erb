<div class="row">
<div class="col s2 "></div>
<div class="col s8 center-align">
<div id="tabbed">
<% if logged_in? && ( current_user.role?(:admin)) %>
    <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#active">Active Customers</a></li>
           
        <li class="tab col s3"><a class="active" href="#inactive">Inactive Customers</a></li>
      </ul>
    </div>
    <div id="active" class="col s12">
      <%= render :partial => "customers_list", locals: {customers: @active_customers, state: 'active'} %>
      </div>
    <div id="inactive" class="col s12">
      <%= render :partial => "customers_list", locals: {customers: @inactive_customers, state: 'inactive'} %>
    </div>
  </div>
</div>
<%end%>
</div></div>
