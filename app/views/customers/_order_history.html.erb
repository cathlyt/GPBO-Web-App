<div class="card">
  <div class="card-content">
    <span class="card-title">Order History</span>
    <table class="striped highlight">
      <thead>
        <th>Date</th>
        <th>Amount</th>
      </thead>
        <% for order in @previous_orders %>
          <tr>
            <td><%= link_to order.date.strftime("%m/%d/%y"), order_path(order) %></td>
          <td>&nbsp;<%= number_to_currency(order.grand_total, precisions:2) %> </td>
          </tr>
        <% end %>
    </table>
    </div>
    </div>
    <div class = "row"></div>

    <div class="card">
    <div class="card-content">
    <span class="card-title">Addresses on file</span>
    <table class="striped highlight">
      <thead>
        <th>Recipient</th>
        <th>Address</th>
      </thead>
        <% for address in @addresses %>
          <tr>
          <td><%= address.recipient %></td>
          <td><%= address.street_1 %></td>
          <td>&nbsp;<%= address.city %>, <%= address.state %> <%= address.zip %> </td>
          
          </tr>
        <% end %>
    </table>
  
</div>
</div>