<h4>Pending Orders in GPBO</h4>

<table class="striped highlight">
  <thead>
    <th>Customer</th>
    <th>Date</th>
    <th>Recipient</th>
    <th>Item Count</th>
    <th>Cost</th>
  </thead>
  <% for order in @pending_orders %>
    <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
      <td><%= link_to order.date.strftime("%m/%d/%y"), order_path(order.id)  %></td>
      <td><%= order.customer.name %></td>
      <td><%= link_to order.address.recipient, address_path(order.address.id) %></td>
      <td><%= "#{order.order_items.size} Item"%></td>
      <td><%= number_to_currency(order.grand_total)%>

    </td>
    </tr>
  <% end %>
</table>
<p class="supertiny"></p>
<br />
<p>&nbsp;</p>