<h4>All Orders in GPBO</h4>

<table class="striped highlight">
  <thead>
    <th>Date</th>
    <th>Customer</th>
    <th>Recipient</th>
    <th>Item Count</th>
    <th>Cost</th>
  </thead>
  <% for order in @all_orders %>
    <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
      <td><%= link_to order.date.strftime("%m/%d/%y"), order_path(order.id)  %></td>
      <td><%= order.customer.proper_name %></td>
      <td><%= order.address.recipient %></td>
      <td><%= order.order_items.size%>
      <td><%= number_to_currency(order.grand_total)%>
      
    </td>
    </tr>
  <% end %>
</table>
<p class="supertiny"></p>
<br />
<p>&nbsp;</p>