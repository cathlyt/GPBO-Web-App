<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"><%= "New Order" %></span>
        <%= simple_form_for(@order) do |f| %>
          <div class="row">
            <div class="form-inputs">
                <%= render partial: "orders/fields", locals: { f: f } %>
            </div>
          </div>
          <p>&nbsp;</p>
          <div class="row">
            <div class="form-actions col s9">
              <%= f.button :submit,value:"Place order" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back', :back %>


<%= link_to "Add a new address", new_address_path, class: 'waves-effect waves-light btn'%>