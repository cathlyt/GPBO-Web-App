<%if can? :read, ItemPrice%>
<% unless @prices.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Price History</span>
      <table class="striped highlight">
      <thead>
        <th>Date</th>
        <th class="align_right">Price</th>
      </thead>
        <% for price in @prices %>
          <tr>
            <td><%= price.start_date.strftime("%b %d, %Y") %></td>
            <td class="align_right"><%= number_to_currency(price.price) %></td>
          </tr>
        <% end %>
    </table>
    </div>
  </div>
<% end %>
<% if can? :new, ItemPrice %>
      <div class="card-action">
        <%= link_to "Add a New Price", new_item_price_path(item_id: @item.id), class: 'waves-effect waves-light btn amber accent-4' %>
      </div>
<% end %>
<%end%>